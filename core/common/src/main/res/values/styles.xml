<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Styles for button-->

    <style name="Button.Period.Selected" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="textAllCaps">true</item>
        <item name="android:backgroundTint">@color/background_solid</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Button.Period.NotSelected" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--    Styles for text input layout-->
    <style name="TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/background_solid</item>
        <item name="cursorColor">@color/background_invert_gray</item>
        <item name="endIconMode">clear_text</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
    </style>

    <!--    Styles for bottomsheet-->

    <style name="RoundedTopCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedTopCornerBottomSheetModalStyle</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="RoundedTopCornerBottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_corner_top_16</item>
        <item name="android:backgroundTint">@color/background_solid</item>
    </style>


    <!--    Styles for text-->
    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="Subhead">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="Subhead.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subhead.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="Body.Green">
        <item name="android:textColor">@color/green_profit</item>
    </style>

    <style name="Body.Red">
        <item name="android:textColor">@color/red_loss</item>
    </style>

    <style name="Body.Gray">
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="Body.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Body.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="Caption.Gray">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="Caption.Green">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/green_profit</item>
    </style>

    <style name="Caption.Red">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red_loss</item>
    </style>

    <style name="Caption.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>